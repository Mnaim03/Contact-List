<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.Controller">
    <!-- Barra di ricerca -->
    <top>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <TextField fx:id="searchField" promptText="Cerca un contatto..."/>
            <Button fx:id="searchButton" text="Cerca"/>
        </HBox>
    </top>
    
    <!-- Lista dei contatti -->
    <center>
        <ListView fx:id="contactListView"/>
    </center>
    
    <!-- Dettagli del contatto -->
    <right>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Nome:"/>
            <TextField fx:id="nameField"/>
            <Label text="Cognome:"/>
            <TextField fx:id="surnameField"/>
            <Label text="Telefono:"/>
            <TextField fx:id="phoneField"/>
        </VBox>
    </right>
    
    <!-- Pulsanti di azione -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="addButton" text="Aggiungi"/>
            <Button fx:id="editButton" text="Modifica"/>
            <Button fx:id="deleteButton" text="Elimina"/>
        </HBox>
    </bottom>
</BorderPane>
